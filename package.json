{
  "name": "excalidraw",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -- turbo run dev",
    "dev:web": "dotenv -- turbo run dev --filter=web",
    "dev:ws": "dotenv -- turbo run dev --filter=ws-backend",
    "dev:http": "dotenv -- turbo run dev --filter=http-backend",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.3",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv-cli": "^11.0.0"
  }
}
